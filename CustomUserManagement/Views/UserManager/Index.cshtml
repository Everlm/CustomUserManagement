@using CustomUserManagement.Models.ManageViewModels
@model List<CustomUserManagement.Models.ManageViewModels.UserRoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>All Roles</h1>
<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Birth Date</th>
            <th>City</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Convert.ToDateTime(item.Birthdate).ToString("dd-MM-yyyy")
                </td>
                <td>
                     @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                     @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>@string.Join(" , ", item.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="UserManager" asp-action="ManageRole" asp-route-userId="item.UserId">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>