@using CustomUserManagement.Models.ManageViewModels
@model List<CustomUserManagement.Models.ManageViewModels.UserRoleViewModel>

@{
    ViewData["Title"] = "Index";
}

<br />
<h1>All Users</h1>
<br />
<p>
    <a class="btn btn-outline-primary" asp-action="CreateRole" asp-controller="RoleManager">
        <i class="fa-solid fa-plus"></i>&nbsp; Add
    </a>
</p>
<div class="card">
<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Birth Date</th>
            <th>City</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Convert.ToDateTime(item.Birthdate).ToString("dd-MM-yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>@string.Join(" , ", item.Roles.ToList())</td>
                <td class="">
                    <a class="btn btn-outline-primary" asp-controller="UserManager" asp-action="ManageRole" asp-route-userId="@item.UserId">
                       <i class="fa-regular fa-address-card"></i>&nbsp;
                    </a>
                    <a class="btn btn-outline-warning" asp-controller="RoleManager" asp-action="EditRole" asp-route-id="@item.UserId">
                        <i class="fa-solid fa-pen-to-square"></i>&nbsp;
                    </a>
                    <a href="#" class="btn btn-outline-danger" onclick="confirmDelete('@item.UserId', true)">
                        <i class="fa-solid fa-trash-can"></i>&nbsp;
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>