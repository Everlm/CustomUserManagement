@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<br />
<h1>Roles</h1>
<br />

<p>
    <a class="btn btn-primary" asp-action="CreateRole" asp-controller="Admin">Add</a>
</p>
<table class="table">
    <thead>
        <tr class="">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                
                <td>
                    <a class="btn btn-outline-warning" asp-controller="Admin" asp-action="EditRole" asp-route-id="@item.Id" >Edit</a>

                    <a class="btn btn-outline-info" asp-action="Details">Details</a>

                    <a class="btn btn-outline-danger" asp-action="Delete">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>